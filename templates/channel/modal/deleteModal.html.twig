{% trans_default_domain 'modal' %}
<div class="modal" id="js-delete-channel-modal-{{ channel.channelName }}" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ 'channel.action.remove_title'|trans }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>{{ 'channel_delete.confirm.delete'|trans }}</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'channel_delete.action.cancel'|trans }}</button>
                <a href="{{ path(path, {'channelName': channel.channelName}) }}" data-method="POST">
                    <button type="button" class="btn btn-primary">{{ 'channel_delete.action.delete'|trans }}</button>
                </a>
            </div>
        </div>
    </div>
</div>
